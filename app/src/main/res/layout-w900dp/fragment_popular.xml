<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        tools:context="com.cheda.skysevents.MainActivity">

        <!--
           This layout is a two-pane layout for the Items
           master/detail flow.-->


        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment_popular"
            android:name="com.cheda.skysevents.PopuListFragment"
            android:layout_width="@dimen/item_width"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            tools:context="com.cheda.skysevents.MainActivity"
            tools:listitem="@layout/event_list_row"
            android:layout_weight="0.74" />


        <FrameLayout
            android:id="@+id/event_detail_container2"
            android:padding="3dp"
            tools:context="com.cheda.skysevents.MainActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />


    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>